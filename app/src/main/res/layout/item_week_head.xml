        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="日"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="一"
        android:layout_height="wrap_content" />

    <TextView

        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="二"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="三"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="四"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="五"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="六"
        android:layout_height="wrap_content" />


</LinearLayout>
